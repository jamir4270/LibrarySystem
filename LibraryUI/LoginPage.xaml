<Page x:Class="LibraryUI.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="White">

    <Grid>
        <TextBlock Text="Library Management System"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,40,0,20"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >
            <TextBlock Text="Student ID:" FontSize="18" Margin="0,10,0,5"/>
            <TextBox x:Name="StudentIDTextBox" FontSize="16" Height="30" BorderThickness="2"/>

            <TextBlock Text="Password:" FontSize="18" Margin="0,20,0,5"/>
            <PasswordBox x:Name="PasswordTextBox" FontSize="16" Height="30" BorderThickness="2"/>

            <Button x:Name="LoginButton"
                    Content="Log In"
                    FontSize="18"
                    Margin="0,30,0,0"
                    Height="40"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
